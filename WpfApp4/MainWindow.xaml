<Window x:Class="ShapeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Shape Factory" Height="350" Width="525">
    <StackPanel>
        <ComboBox x:Name="ColorComboBox" SelectionChanged="ColorComboBox_SelectionChanged">
            <ComboBoxItem Content="Red" />
            <ComboBoxItem Content="Blue" />
            <ComboBoxItem Content="Yellow" />
        </ComboBox>
        <Canvas x:Name="DrawingCanvas" Width="500" Height="300" Background="White"/>
    </StackPanel>
</Window>
